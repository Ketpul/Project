@model RestaurantDetailsViewModel


@{
    ViewBag.Title = Model.Name;
    var images = Model.ImageUrl;
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="container" style="display:inline">
    <div class="row">
        <div class="col-4">
            <div class="mb-5"></div>

            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @for (int i = 0; i < images.Count(); i++)
                    {
                        <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                            <img class="card-img" style="width: 25rem; height: 20rem; margin-bottom: 40px;"
                                 src="@images[i]">
                        </div>
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
                <div class="form-inline">
                    <form method="post" asp-controller="Comment" asp-action="AddComment">

                        <h5 class="card-title"><b>Comments:</b></h5>
                        @foreach (var comment in Model.Comments)
                        {
                            <div class="card" style="width: 25rem; margin-bottom: 20px;">
                                <p>
                                    <strong>User:</strong> @comment.UserName Rating:
                                    <span style="color: gold;">
                                        @for (int i = 0; i < comment.Rating; i++)
                                        {
                                            <label>★</label>
                                        }
                                    </span>
                                </p>
                                <p>@comment.info</p>
                            </div>
                            

                        }
                        <textarea name="commentText" class="form-control" aria-required="true" rows="4" style="width: 25rem;"></textarea>
                        <input type="hidden" name="restaurantId" value="@Model.Id" />
                        <label for="rating">Rating:</label>
                        <input type="number" name="rating" id="rating" min="1" max="5" class="form-control" style="width: 5rem;" required>
                        <button type="submit" class="btn-primary p-2 fw-bold" style="width: 25rem;">Add Comment</button>
                        
                    </form>
                </div>
            </div>
        </div>
        <div class="card col-8 border-0">
            <p><strong>Located in:</strong>@Model.Address</p>
            <p>@Model.Description</p>
            <p style ="margin-bottom: 10px;"><strong>Category:</strong> @Model.Category</p>
            <p style="margin-bottom: 40px;"><strong>City:</strong> @Model.City</p>
            @if (!string.IsNullOrEmpty(Model.GoogleMaps) && Uri.IsWellFormedUriString(Model.GoogleMaps, UriKind.Absolute))
            {
                <iframe src="@Model.GoogleMaps" style="width: 35rem; height: 30rem;" loading="lazy"></iframe>
            }
            else
            {
                <p>Грешка: Невалиден линк към Google Maps</p>
            }
            <p>

            </p>
            
            <div class="card" style="width: 18rem; position: absolute; top: 0; right: -25%;">
                <div class="card-body">
                        <h5 class="card-title"><b>Agent Info:</b></h5>
                    <p class="card-text">Full Name:  @Model.FullName</p>
                    <p class="card-text">Email: @Model.Email </p>
                    <p class="card-text">Phone Number: @Model.PhoneNumber</p>
                    <p>
                        @if (User.Identity.Name == Model.UserName || User.IsInRole(AdminRole))
                        {
                            <div style="position: relative;">
                                <a asp-controller="Restaurant" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info mb-2 w-48 p-3 fw-bold" style="position: absolute; left: -1rem; top: 1rem;">Edit the Restaurant</a>

                                <a asp-controller="Restaurant" asp-action="DeleteRestaurant" asp-route-id="@Model.Id" class="btn btn-danger mb-2 w-30 p-3 fw-bold" style="position: absolute; left: 10.2rem; top: 1rem;">Delete</a>
                            </div>
                        }
                    </p>
                    
                </div>
            </div>
            

        </div>
    </div>
</div>





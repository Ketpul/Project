@model RestaurantDetailsViewModel

@{
    ViewBag.Title = "Restaurant Details";
    var images = Model.ImageUrl;
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="container" style="display:inline">
    <div class="row">
        <div class="col-4">
            <div class="mb-5"></div>

            <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    @for (int i = 0; i < images.Count(); i++)
                    {
                        <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                            <img class="card-img-top" style="width: 25rem;"
                                 src="@images[i]">
                        </div>
                    }
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="card col-8 border-0">
            <p>Located in: <b>@Model.Address</b></p>
            
            <p>@Model.Description</p>
            <p>Category: <b>@Model.Category</b></p>
            <div class="form-inline">
            </div>
            <p></p>
            <div class="card" style="width: 18rem; position: absolute; top: 0; right: 0;">
                <div class="card-body">
                    <h5 class="card-title">Agent Info:</h5>
                    <p class="card-text">Full Name:  @Model.FullName</p>
                    <p class="card-text">Email: @Model.Email </p>
                    <p class="card-text">Phone Number: @Model.PhoneNumber</p>
                </div>
            </div>
        </div>
        
        <form method="post" asp-controller="Comment" asp-action="AddComment">
            <div style="width: 30rem; position: absolute; top: 50%; left: 51%; transform: translate(-50%, -50%);">
                <div>
                    <h5 class="card-title">Comments:</h5>
                    <p>
                        @foreach (var comment in Model.Comments)
                        {
                            <div class="card">
                                <p>@comment.UserName</p>
                                <p>@comment.info</p>
                            </div>
                        }
                    </p>
                    <textarea name="commentText" class="form-control" aria-required="true" rows="4"></textarea>
                    <input type="hidden" name="restaurantId" value="@Model.Id" /> 
                    <button type="submit" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Add Comment</button>
                </div>
            </div>
        </form>

    </div>
</div>
